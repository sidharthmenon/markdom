{
    "name": "sinnbeck/markdom",
    "description": "Converts markdown to html with classes",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Ren√© Sinnbeck",
            "email": "rene.sinnbeck@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Sinnbeck\\Markdom\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "league/commonmark": "^1.5",
        "scrivo/highlight.php": "^9.18.1.3",
        "godbout/htmlpagedom": "^3.0",
        "ext-dom": "*",
        "gajus/dindent": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "9.3.10",
        "orchestra/testbench": "^3.8|^4.0|^5.0",
        "pestphp/pest": "^0.3.9",
        "symfony/var-dumper": "^5.1",
        "spatie/pest-plugin-snapshots": "^0.3.1"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Sinnbeck\\Markdom\\MarkdomServiceProvider"
            ]
        }
    }
}
